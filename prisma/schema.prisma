generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String   // Hashed
  department String? // FrontEnd, BackEnd, Design, Support
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  
  // Relations
  receivedMessages Message[] @relation("ReceivedMessages")
  sentMessages     Message[] @relation("SentMessages")
  reactions        Reaction[]
}

model Message {
  id        String   @id @default(cuid())
  content   String
  
  // Sender info (optional if anonymous)
  fromId    String?
  fromUser  User?    @relation("SentMessages", fields: [fromId], references: [id])
  
  // Recipient info
  toId      String?  // If registered user
  toUser    User?    @relation("ReceivedMessages", fields: [toId], references: [id])
  toName    String?  // If unregistered/ad-hoc name
  
  isPublic  Boolean  @default(false)
  
  // Visuals
  style     String?  // JSON string for color, rotation, sticker type
  
  createdAt DateTime @default(now())
  
  // Relations
  reactions Reaction[]
}

model Reaction {
  id        String   @id @default(cuid())
  emoji     String   // The emoji selected
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  messageId String
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@unique([userId, messageId, emoji])
  @@index([messageId])
}

model SystemConfig {
  id                  String  @id @default("default")
  areMessagesRevealed Boolean @default(false)
}
